@page
@model FinleyM_VGL.Areas.Admin.Pages.Roles.PremiumUser.IndexModel
@{
}
<h1>Add a Video URL</h1>


<div class="row">
    <div class="col-sm-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=" SelectedGame">Select a Game:</label>
                <select asp-for="SelectedGame" asp-items="Model.Games">
                    <option>Select a Game</option>
                </select>
                <span asp-validation-for="SelectedGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoUrl">Enter a URL</label>
                <input asp-for="VideoUrl"/>
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <button type="submit" classs="btn btn-primary">Add Video</button>
        </form>
    </div>
</div>


